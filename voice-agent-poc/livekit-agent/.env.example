# LiveKit Voice Agent Configuration
# Open-source alternative to OpenAI Realtime API

# =============================================================================
# REQUIRED: At least one of these API keys
# =============================================================================

# OpenAI API Key (for GPT-4, Whisper STT, TTS)
OPENAI_API_KEY=sk-...

# =============================================================================
# OPTIONAL: Alternative Providers
# =============================================================================

# Deepgram API Key (for faster STT)
# DEEPGRAM_API_KEY=...

# ElevenLabs API Key (for better TTS quality)
# ELEVENLABS_API_KEY=...

# Anthropic API Key (for Claude instead of GPT)
# ANTHROPIC_API_KEY=...

# Ollama Host (for local LLM)
# OLLAMA_HOST=http://localhost:11434

# =============================================================================
# PROVIDER SELECTION
# =============================================================================

# STT Provider: openai, deepgram
STT_PROVIDER=openai
STT_MODEL=whisper-1

# LLM Provider: openai, anthropic, ollama
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o

# TTS Provider: openai, elevenlabs, cartesia
TTS_PROVIDER=openai
TTS_VOICE=alloy
TTS_SPEED=1.0

# =============================================================================
# N8N INTEGRATION (for tool execution)
# =============================================================================

# n8n Tools Webhook URL (for schedule_meeting, send_email, etc.)
N8N_TOOLS_WEBHOOK=https://your-n8n.cloud/webhook/voice-tools

# n8n Logging Webhook URL (for conversation logging)
N8N_LOGGING_WEBHOOK=https://your-n8n.cloud/webhook/voice-logging

# Shared secret for webhook authentication
WEBHOOK_SECRET=your-shared-secret

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# WebSocket server port
PORT=3000

# Health check server port
HEALTH_PORT=3001

# Log level: DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO
