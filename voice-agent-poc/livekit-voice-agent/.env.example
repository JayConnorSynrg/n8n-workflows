# =============================================================================
# LIVEKIT VOICE AGENT - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# IMPORTANT: .env files are gitignored - never commit secrets
# =============================================================================

# -----------------------------------------------------------------------------
# LiveKit Cloud
# -----------------------------------------------------------------------------
# Get these from: https://cloud.livekit.io/projects
LIVEKIT_URL=wss://your-project.livekit.cloud
LIVEKIT_API_KEY=APIxxxxxxxxxx
LIVEKIT_API_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# -----------------------------------------------------------------------------
# Deepgram STT (Speech-to-Text)
# -----------------------------------------------------------------------------
# Get API key from: https://console.deepgram.com
DEEPGRAM_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
DEEPGRAM_MODEL=nova-3

# -----------------------------------------------------------------------------
# Groq LLM (Language Model)
# -----------------------------------------------------------------------------
# Get API key from: https://console.groq.com
GROQ_API_KEY=gsk_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
GROQ_MODEL=llama-3.1-8b-instant
GROQ_TEMPERATURE=0.7
GROQ_MAX_TOKENS=256

# -----------------------------------------------------------------------------
# Cartesia TTS (Text-to-Speech)
# -----------------------------------------------------------------------------
# Get API key from: https://cartesia.ai
CARTESIA_API_KEY=sk_car_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
CARTESIA_MODEL=sonic-3
# Voice ID - find voices at https://cartesia.ai/voices
CARTESIA_VOICE=a0e99841-438c-4a64-b679-ae501e7d6091

# -----------------------------------------------------------------------------
# n8n Integration (Webhook endpoints for tools)
# -----------------------------------------------------------------------------
N8N_WEBHOOK_BASE_URL=https://your-instance.app.n8n.cloud/webhook

# -----------------------------------------------------------------------------
# Agent Settings
# -----------------------------------------------------------------------------
AGENT_NAME=Voice Assistant
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Railway Deployment (for CI/CD automation)
# -----------------------------------------------------------------------------
# Get project token from: Railway Dashboard → Project → Settings → Tokens
RAILWAY_TOKEN=your-railway-project-token
RAILWAY_PROJECT_ID=your-project-uuid
RAILWAY_ENVIRONMENT_ID=your-environment-uuid
RAILWAY_SERVICE_ID=your-service-uuid

# -----------------------------------------------------------------------------
# GitHub (for deployment triggers)
# -----------------------------------------------------------------------------
GITHUB_REPO=your-username/livekit-voice-agent

# =============================================================================
# N8N VARIABLES (Set in n8n Settings → Variables)
# =============================================================================
# These must be set in your n8n instance for the launcher workflow:
#
# LIVEKIT_API_KEY     - Same as above
# LIVEKIT_API_SECRET  - Same as above
# LIVEKIT_URL         - Same as above
# N8N_WEBHOOK_BASE_URL - Your n8n webhook base URL
# =============================================================================
