# =============================================================================
# LIVEKIT VOICE AGENT - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# IMPORTANT: .env files are gitignored - never commit secrets
# =============================================================================

# -----------------------------------------------------------------------------
# LiveKit Cloud
# -----------------------------------------------------------------------------
# Get these from: https://cloud.livekit.io/projects
LIVEKIT_URL=wss://your-project.livekit.cloud
LIVEKIT_API_KEY=APIxxxxxxxxxx
LIVEKIT_API_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# -----------------------------------------------------------------------------
# Deepgram STT (Speech-to-Text)
# -----------------------------------------------------------------------------
# Get API key from: https://console.deepgram.com
DEEPGRAM_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
DEEPGRAM_MODEL=nova-3

# -----------------------------------------------------------------------------
# LLM Provider Selection
# -----------------------------------------------------------------------------
# "fireworks" (default, 128K context) or "cerebras" (fast, limited context)
LLM_PROVIDER=fireworks

# -----------------------------------------------------------------------------
# Fireworks AI LLM (Primary - function calling required)
# -----------------------------------------------------------------------------
# Get API key from: https://fireworks.ai/account/api-keys
# IMPORTANT: Only use models with function calling support on Fireworks!
# llama-v3p3-70b-instruct does NOT support FC - agent will speak JSON aloud.
# Recommended: deepseek-v3p1 (163K ctx, fastest TTFT, proven FC)
# Alternatives: llama4-scout-instruct-basic (1M ctx, cheapest)
#               llama-v3p1-70b-instruct (131K ctx, battle-tested)
#               kimi-k2-instruct-0905 (262K ctx, agentic)
FIREWORKS_API_KEY=your-fireworks-api-key-here
FIREWORKS_MODEL=accounts/fireworks/models/deepseek-v3p1
FIREWORKS_TEMPERATURE=0.6
FIREWORKS_MAX_TOKENS=512

# -----------------------------------------------------------------------------
# Cerebras LLM (Fallback - 1M free tokens/day, limited context)
# -----------------------------------------------------------------------------
# Get API key from: https://cloud.cerebras.ai
# Models: gpt-oss-120b (65K ctx), llama3.1-8b (8K ctx)
CEREBRAS_API_KEY=
CEREBRAS_MODEL=gpt-oss-120b
CEREBRAS_TEMPERATURE=0.6
CEREBRAS_MAX_TOKENS=150

# -----------------------------------------------------------------------------
# Cartesia TTS (Text-to-Speech)
# -----------------------------------------------------------------------------
# Get API key from: https://cartesia.ai
CARTESIA_API_KEY=sk_car_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
CARTESIA_MODEL=sonic-3
# Voice ID - find voices at https://cartesia.ai/voices
CARTESIA_VOICE=a0e99841-438c-4a64-b679-ae501e7d6091

# -----------------------------------------------------------------------------
# n8n Integration (Webhook endpoints for tools)
# -----------------------------------------------------------------------------
N8N_WEBHOOK_BASE_URL=https://your-instance.app.n8n.cloud/webhook

# -----------------------------------------------------------------------------
# Agent Settings
# -----------------------------------------------------------------------------
AGENT_NAME=Voice Assistant
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Composio Integration (SDK-only, zero config)
# -----------------------------------------------------------------------------
# Connected services are auto-discovered from your Composio account.
# No toolkit lists needed — the agent sees whatever you've connected.
# Get API key at https://composio.dev
COMPOSIO_API_KEY=your-composio-api-key-here
# External user ID scopes tools to the right connected accounts.
# Find your user_id in the Composio dashboard under Connected Accounts.
COMPOSIO_USER_ID=your-composio-external-user-id

# -----------------------------------------------------------------------------
# Railway Deployment
# -----------------------------------------------------------------------------
RAILWAY_TOKEN=your-railway-project-token
RAILWAY_PROJECT_ID=your-project-uuid
RAILWAY_ENVIRONMENT_ID=your-environment-uuid
RAILWAY_SERVICE_ID=your-service-uuid

# =============================================================================
# N8N VARIABLES (Set in n8n Settings → Variables)
# =============================================================================
# LIVEKIT_API_KEY, LIVEKIT_API_SECRET, LIVEKIT_URL, N8N_WEBHOOK_BASE_URL
# =============================================================================
